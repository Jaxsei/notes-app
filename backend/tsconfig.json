{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2022",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "express",
      "jsonwebtoken",
      "multer",
      "nodemailer"
    ],
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
